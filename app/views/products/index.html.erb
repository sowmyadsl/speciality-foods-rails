<h1>Products</h1>

<div class="flex-box">
     <% @products.each do |product| %>
     <div class="product-img">
       <%= link_to image_tag(product.image), product_path(product)%>
       <br>
       Submitted <%= time_ago_in_words(product.created_at) %> ago.
     </div>
     <% end %>
 </div>

<hr>

<%= link_to "New Product", new_product_path %>
